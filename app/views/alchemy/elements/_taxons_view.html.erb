<%= stylesheet_link_tag "bootstrap" %>
<div class="container-fluid product row-fluid" id="<%= element_dom_id(element) %>"<%= element_preview_code(element) -%>>
	<table class="table">
	<% element.ingredient('spree_taxon').products.in_groups_of(3, false) do |row| %>
	  <thead>
	    <tr>
	    <% row.each do |product|%>
	      <th style="text-align:center"><%= link_to product.name, spree.product_path(product) %></th>
	    <% end %>
	    </tr>
	  </thead>
	  <tbody>
	    <tr>
	    <% row.each do |product|%>
	      <td style="text-align:center"><%= link_to image_tag(product.images.first.attachment.url(:small)), spree.product_path(product) %></td>
	    <% end %>
	    </tr>
	    <tr>
	    <% row.each do |product|%>
	      <td style="text-align:center"><%= product.price %></td>
	    <% end %>
	    </tr>
	  </tbody>
	<% end %>
</table>
</div>
